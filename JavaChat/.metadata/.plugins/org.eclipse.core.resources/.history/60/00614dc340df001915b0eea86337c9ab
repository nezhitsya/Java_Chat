import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.SwingConstants;

public class just extends JPanel {
	private JPanel panel;
	/**
	 * Create the panel.
	 */
	public just() {
		setLayout(null);
		
		JPanel panel_1 = new JPanel();
		panel_1.setBounds(0, 0, 900, 550);
		add(panel_1);
		panel_1.setLayout(null);
		panel_1.setVisible(true);
		
		JLabel lblClose = new JLabel("X");
		lblClose.setBounds(858, 10, 30, 30);
		panel_1.add(lblClose);
		lblClose.setFont(new Font("HYΩ≈∏Ì¡∂", Font.BOLD, 20));
		lblClose.setHorizontalAlignment(SwingConstants.CENTER);
		lblClose.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseClicked(MouseEvent arg0) {
				System.exit(0);
			}
		});
	}
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					just window = new just();
					window.panel.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
}
